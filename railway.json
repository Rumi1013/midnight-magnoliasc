{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd midnight-magnolia/midnight-magnolia && npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "cd midnight-magnolia/midnight-magnolia && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 